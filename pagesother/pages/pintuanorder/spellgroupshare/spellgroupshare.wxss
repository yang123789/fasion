  display: inline-block;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 3px;
}

.order-detail-wating-share .label {
  font-size: 18px;
  margin: 10px auto;
  display: block;
  text-align: center;
  font-weight: bold;
}

.order-detail-wating-share .label {
  font-size: 18px;
  margin: 10px auto;
  display: block;
  text-align: center;
  font-weight: bold;
}

.order-detail-wating-share button {
  background: #f44;
  color: #ffffff;
  border: 1px solid #f44;
  padding: 7px;
  border-radius: 3px;
  margin: 8px auto;
  display: block;
  width: 90%;
  height: initial;
  line-height: initial;
  font-size: 14px;
}

.order-detail-wating-share .a button{
  background: #fff;
  color: #f44;
}

.order-detail-wating-share .a{
  width: 100%;
}

.list-item .a button{
  background: #fff;
  color: #f44;
}

.group_detail {
  padding: 0px 10px;
  background: #fff;
  margin-top: 10px;
}

.group_detail .list-item {
  border-bottom: 1px solid #eee;
}

.group_detail .list-item .user-list {
  padding: 15px 0 0px 20px;
  margin: 0;
}

.group_detail .list-item .user-list .li {
  position: relative;
  margin: 0px 5px 10px 0;
  display: inline-block;
}

.group_detail .list-item .user-list .li .boss {
  position: absolute;
  left: -6px;
  top: -6px;
  background: #FFAB33;
  color: #333333;
  border-radius: 10px;
  font-size: 12px;
  padding: 0 5px;
}

.group_detail .list-item .user-list .li image {
  width: 40px;
  max-width: 100%;
  max-height: 60px;
  vertical-align: middle;
  border-radius: 50%;
}

.group_detail .goods_info {
  line-height: 40px;
}

.group_detail .goods_info .item-title {
  width: 30%;
  line-height:40px;
  display:block;
  float:left;
}

.group_detail .goods_info .a{
  display: flex;
}

.group_detail .goods_info .goods_name {
  float: right;
  color: #777;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 100%;
  text-align: right;
}

.mask-layer-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .8);
  z-index: 1000;
}

.mask-layer-invite-friends {
  z-index: 1001;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 10%;
  left: 0;
}

.mask-layer-invite-friends view:first-child {
  text-align: right;
  margin: 10px 10px 30px;
}

.mask-layer-invite-friends view image {
  width: 50px;
  margin-right:15%;
}

.mask-layer-invite-friends .h4 {
  color: #ffffff;
  text-align: center;
  font-weight: bold;
  font-size: 18px;
}

.mask-layer-invite-friends .h4 strong {
  color: #E02E24;
}