.VerificationGoodsInfo {
  padding: 0 10px;
  background: #fff;
}

.VerificationGoodsInfo .h2.title {
  font-size: 14px;
  color: #333;
  padding: 10px 0 10px 0;
  font-weight: normal;
  border-bottom: 1px solid #eee;
}

.VerificationGoodsInfo .h2.title .custom-store-img {
  display: inline-block;
  vertical-align: middle;
  height: 18px;
  width: 18px;
  margin-right: 5px;
  border-bottom: 1px solid #eee;
}

.VerificationGoodsInfo .goods_info {
  width: 100%;
  padding: 10px 0;
  overflow: hidden;
}

.VerificationGoodsInfo .goods_info .goods_img {
  width: 30%;
  float: left;
}

.VerificationGoodsInfo .goods_info .goods_img .a {
  display: block;
  width: 100%;
  padding: 50% 0;
  position: relative;
  line-height: 100%;
}

.VerificationGoodsInfo .goods_info .goods_img .a image {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  vertical-align: middle;
  background: #eee;
}

.VerificationGoodsInfo .goods_info .data_goods_info {
  width: 65%;
  float: left;
  margin-left: 5%;
}

.VerificationGoodsInfo .goods_info .data_goods_info .p.goods_name {
  max-height: 44px;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.VerificationGoodsInfo .goods_info .data_goods_info .p.sku_name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999;
  font-size: 12px;
  margin-top: 5px;
}

.list-container {
  margin-top: 20px;
  background: #fff;
}

.list-container .ul {
  padding: 0 15px;
}

.list-container .ul .li {
  list-style: none;
  min-height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
  overflow: hidden;
}

.list-container .ul .li .span.title {
  color: #666;
  font-size: 14px;
  float: left;
}

.list-container .ul .li .span.tip {
  float: right;
  color: #999;
  font-size: 12px;
}

.btn-verrfication {
  width: 100%;
  height: 50px;
  color: #fff;
  text-align: center;
  line-height: 50px;
  background: red;
  position: fixed;
  bottom: 0;
}

.load_img{
  position: fixed;
  width: 42px;
  height: 42px;
  top: 40%;
  left: 0;
  right: 0;
  margin: auto;
}