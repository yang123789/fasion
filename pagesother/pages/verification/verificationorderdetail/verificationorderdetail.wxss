.container {
  border-top: 1.5px solid #F5F5F5;
  height: unset;
  padding: 20px;
  background: #fff;
  text-align: center;
}

.verification_goods_info {
  width: 100%;
  height: 110px;
  padding: 30px 0 20px 0;
  position: relative;
}

.verification_goods_info .back_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 160px;
  z-index: 10;
}

.verification_goods_info .goods_img {
  position: absolute;
  top: 30px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  text-align: center;
  line-height: 50px;
  overflow: hidden;
  margin: 0 auto;
  z-index: 12;
  left: 0;
  right: 0;
}

.verification_goods_info .goods_img image {
  width: 100%;
}

.verification_goods_info .name, .verification_goods_info .desc {
  padding: 0 10px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #fff;
  line-height: 1.5;
}

.verification_goods_info .name {
  font-size: 14px;
  position:absolute;
  z-index:12;
  left:0;
  right:0;
  top: 90px;
}

.verification_goods_info .desc {
  position:absolute;
  z-index:12;
  left:0;
  right:0;
  font-size: 12px;
  top: 110px;
}

.container .howmany {
  color: #666;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 20px;
  padding-top: 25px;
}

.container .howmany .span.num {
  color: #89B485;
  margin-left: 5px;
  font-size: 20px;
}

.container .immediateUuse {
  display: inline-block;
  padding: 6px 40px;
  border: 1px solid #89B485;
  color: #89B485;
  border-radius: 3px;
  margin-top: 25px;
}

.list-container {
  margin-top: 20px;
  background: #fff;
  height: 40px;
}

.list-container .ul {
  padding: 0 15px;
}

.list-container .a{
  width: 100%;
}

.list-container .ul .li {
  list-style: none;
  min-height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
  overflow: hidden;
}

.list-container .ul .a.last-child .li {
    border: none;
}

.list-container .ul .li .span.title {
  color: #666;
  font-size: 14px;
  float: left;
  line-height: 40px;
}

.list-container .ul .li .span.tip {
  float: right;
  color: #999;
  font-size: 12px;
  line-height: 40px;
}