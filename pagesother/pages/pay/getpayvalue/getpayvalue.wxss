.head-info {
  text-align: center;
  border-top: 1px solid #EEE;
  background: none;
  line-height: 31px;
  height: 98px;
  padding-top: 10px;
}

.head-pay {
  color: #646464;
  margin-top: 12px;
  font-size: 15px;
}

.head-pay-value {
  font-size: 24px;
  color: #646464;
}

.available-balance {
  padding: 14px 10px;
  background: #fff;
  font-size: 14px;
}

.available-balance .balance_checkbox {
  float: right;
}

.switch_checkbox {
  display: none;
}

.switch_label {
  background-color: #fff;
  display: inline-block;
  position: relative;
  height: 25px;
  width: 40px;
  border-radius: 1000px;
  border: 1px solid #e6e7eb;
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;
  -ms-transition: all 0.3s;
  -o-transition: all 0.3s;
  transition: all 0.3s;
}

.switch_circle {
  position: absolute;
  display: inline-block;
  height: 25px;
  width: 25px;
  border-radius: 50%;
  background-color: #fff;
  left: 0;
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;
  -ms-transition: all 0.3s;
  -o-transition: all 0.3s;
  transition: all 0.3s;
  box-shadow: 1px 1px 3px rgba(0,0,0,.32);
}

.checked.switch_label {
  background: #08BC05;
}

.checked .switch_circle {
  left: 16px;
}

.pay-type-item {
  padding: 8px;
  margin-top: 10px;
  background: #FFF;
}

.codes {
  width: 100%;
  overflow: hidden;
  margin: 0 auto;
  border-radius: 10px;
}

.wchat-weixin {
  text-align: left;
}

.codes .wchat-weixin, .codes .ali-pay, .codes .union-pay {
  padding: 8px 0;
  position: relative;
}

.codes .wchat-weixin {
  background: #fff;
  padding-bottom: 10px;
}

.wchat-photo {
  margin: 0 10px 0 5px;
  width: 32px;
  height: 32px;
  vertical-align: middle;
}

.wchat-title {
  font-size: 14px;
  color: #222;
}

#wchatpay {
  margin-right: 13px;
  float: right;
  position: relative;
  width:25px;
}

#wchatpay icon {
  position: absolute;
  top: 3.5px;
  margin: auto;
}

.s-btn {
  margin-top: 20px;
}

.s-btn .a.alipay {
  display: block;
  background: #08BC05;
  color: #fff;
  margin: 0 10px;
  height: 45px;
  line-height: 45px;
  text-align: center;
  border-radius: 3px;
}