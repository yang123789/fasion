}

.ns-lf {
  float: left;
  margin-left:0.625rem;
}

.first .ns-lf{
  font-size: 16px;
  color: #444;
}

.ns-rg {
  color: red;
  font-size: 14px;
  float: right;
  margin-right:0.625rem;
}

.second{
  padding-top: 0.2rem;
