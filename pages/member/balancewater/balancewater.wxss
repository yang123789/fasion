.my-account .account-box{
  border-top: 1px solid #f77c52;
  background: -webkit-linear-gradient(#FE4445, #FF8458);
  background: -o-linear-gradient(#FE4445, #FF8458);
  background: -moz-linear-gradient(#FE4445, #FF8458);
  background: linear-gradient(#FE4445, #FF8458);
  padding: 15px 0;
  text-align: center;
}

.my-account .account-box .balace{
  font-size: 42px;
  color: #fff;
}

.balance-label{
  font-size: 14px;
  color: #ffc9b6;
  padding-bottom: 15px;
}

.my-account .account-box .account-title{
  font-size: 16px;
  font-weight: 200;
  line-height: 45px;
  color: #fff;
}

.my-account .account-box .bottom{
  border: 1px solid #f56430;
  padding: 7px 18px;
  margin-top: 10px;
  border-radius: 6%;
  line-height: 21px;
  background: #ff8458;
  color: #f7f7f7;
}

.account-option{
  width: 100%;
  height: 48px;
}

.account-option-left{
  float: left; 
  margin-top: 21px;
  text-align: center;
  line-height: 40px;
  font-size: 16px;
  border-top: 1px solid #f86126;
  border-bottom: 1px solid #f86126;
  border-right: 1px solid #f86126;
  color: #fff;
  width: 50%;
}

.account-option-right{
  float: right;
  border-top: 1px solid #f86126;
  border-bottom: 1px solid #f86126;
  border-left: none;
  text-align: center;
  line-height: 40px;
  font-size: 16px;
  color: #fff;
  width: 49.5%;
  margin-top: 21px;
}

.ul{
  width: 100%;
}

.ul .li{
  width: 100%;
}

.ul .a{
  width: 50%;
}

.table {
    border-collapse: collapse;
    border-spacing: 0;
}

.table {
    width: 100%;
    border: none;
    margin-bottom: 54px;
}

.table .tr {
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  float: left;
  width: 100%;
  background: #FFFFFF;
}

.table .tr .td{
  padding-bottom: 0.2rem;
  padding-left: 0;
  padding-right: 0;
  font-size: 16px;
  float: left;
  width: 100%;
}

.table .tr .th, .table .tr .td {
  padding-top:0.5625rem;
  color: #222;
}

.ns-lf{
  font-size: 16px;
  float: left;
  color: #444;
  margin-left: 0.625rem;
}

.ns-rg {
  color: red;
  font-size: 14px;
  float: right;
  margin-right: 0.625rem;
}

.bottom-td{
  padding-top: 0.2rem;
  font-size: 14px;
  color: #888;
  width: 100%;
}

.bottom-td .span{
  color: #888;
}

.bottom-td .ns-lf{
  font-size: 14px;
}

.ns-rg-time{
  font-size: 14px;
  float: right;
  margin-right: 0.625rem;
}

.emptyFrame {
  width: 100%;
  margin: 60px auto 0;
  text-align: center;
}

.emptyFrame .user_balance {
  width: 110px;
  height: 68px;
  display: inline-block;
}

.emptyFrame .span{
  width: 100%;
  text-align: center;
  color: #DD997F;
  font-size: 14px;
  display: inline-block;
  margin-top: 20px;
}

.my-account .account-box .account-title {
  font-size: 16px;
  font-weight: 200;
  line-height: 22px;
  color: #fff;
}