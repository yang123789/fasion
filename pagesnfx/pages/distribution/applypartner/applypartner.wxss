.step-process {
  background: #f7f7f7;
  border-bottom: 1px dashed #ccc;
}

.step-process .ul {
  list-style: none;
  margin: 0px auto 20px;
  width: 300px;
  overflow: hidden;
}

.step-process .li {
  float: left;
  margin-top: 20px;
}

.step-process .name {
  margin: 0;
  color: #999;
  font-size: 12px;
  text-align: center;
}

.step-process .current .name {
  color: #f37872;
}

.step-process .step01 .name {
  text-align: left;
}

.step-process .number {
  display: inline-block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  border-radius: 50%;
  background: #ccc;
  color: #fff;
  font-weight: bold;
  text-align: center;
  vertical-align: middle;
}

.step-process .prcess-line {
  display: inline-block;
  height: 2px;
  width: 60px;
  background: #ccc;
  vertical-align: middle;
}

.step-process .current .number, .step-process .current .prcess-line {
  background: #f37872;
}

.apply {
  background-color: #f7f7f7;
  overflow: hidden;
  text-align: center;
  padding: 5px 10px;
}

.apply .h4 {
  height: 30px;
  margin-top: 10px;
  font-size: 16px;
  color: #333;
  font-weight: 200;
}

.apply .hr {
  width: 92%;
  margin: auto;
  border: solid #dddddd;
  border-width: 1px 0 0;
  clear: both;
  height: 0;
}

.apply .p {
  font-size: 14px;
  text-align: left;
  margin-top: 10px;
  margin-bottom: 11px;
}

.apply-p {
  color: #ff5400;
}

.fa {
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  padding-left: 20px;
  position: relative;
}

.fa-info-circle:before {
  position: absolute;
  display: inline-block;
  width: 14px;
  height: 14px;
  line-height: 14px;
  border-radius: 12px;
  font-size: 10px;
  color: #FFF;
  text-align: center;
  content: "i";
  background: #ff5400;
  left: 0;
}

.a_button {
  width: 54%;
  height: 36px;
  display: inherit;
  margin: auto;
  background: #ff6e6e;
  text-align: center;
  line-height: 36px;
  color: #fff;
  border-radius: 4px;
  margin-top: 15px;
  font-size: 15px;
}

.apply-money {
  display: inline-block;
  color: #ff5400;
  font-size: 15px;
}

.step-process .step03 .name {
  text-align: right;
}

.frog {
  margin: -10px 20px 20px 20px;
  text-align: center;
  color: #999;
  font-size: 15px;
}

.frog image {
  display: block;
  width: 107px;
  height: 50.42px;
  margin: 40px auto 10px;
}