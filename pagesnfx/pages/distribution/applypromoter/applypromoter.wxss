.main_content {
  width: 100%;
  overflow: hidden;
}

.main_content .title_img image {
  width: 100%;
}

.apply_content {
  margin: 8px 0px;
  background-color: #fff;
  overflow: hidden;
  padding: 10px 0px;
}

.apply_content .apply_title_one {
  color: #666;
  font-size: 15px;
  border-left: 2px solid #FF4040;
  height: 20px;
  margin: 5px 0px;
  padding-left: 7px;
}

.apply_content .apply_title_one .title_two {
  font-size: 12px;
  color: #ccc;
  margin-left: 6px;
}

.apply_content .content_i {
  padding: 5px 0px;
  overflow: auto;
  border-top: 1px solid #ddd;
}

.apply_content .content_i .a.no_i {
  color: #ccc;
}

.content_i .a .span {
  float: right;
  margin-right: 11px;
}

.weui_cell {
  padding: 4px 15px 0px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

.weui_label {
  display: block;
  width: 105px;
  word-wrap: break-word;
  word-break: break-all;
}

.weui_cell_primary {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}

.weui_input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.41176471em;
  line-height: 1.41176471;
}

.a_button {
  display: block;
  margin: 10px auto;
  width: 80%;
  text-align: center;
  background: #ea1717;
  height: 35px;
  line-height: 35px;
  color: #fff;
  font-size: 15px;
  border-radius: 5px;
  font-weight: bold;
}

.apply_content .apply_title_item {
  width: 97%;
  display: inline-block;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
  padding: 0px 5px 7px;
}

.apply_content .content_i .a {
  display: inline-block;
  width: 92%;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #ddd;
  margin: 0px 4%;
  font-size: 12px;
  color: #666;
}

.apply_content .apply_title_item .i {
  margin-right: 10px;
  display: block;
  width: 26px;
  height: 26px;
  float: left;
  margin-top: 9px;
}

.apply_content .apply_title_item .item_row {
  overflow: hidden;
  float: left;
}

.item_row .item_title {
  color: #333;
  font-size: 14px;
  margin-bottom: 5px;
}

.item_row .item_content {
  color: #999;
  font-size: 13px;
}

.frog {
  margin: 70px 20px 0 20px;
  text-align: center;
  color: #999;
  font-size: 15px;
}

.frog image {
  width: 107px;
  height: 50.4px;
  display: block;
  margin: 40px auto 10px;
}