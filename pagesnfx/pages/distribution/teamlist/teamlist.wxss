.team-item {
  padding: 10px;
  height: 60px;
  border-bottom: 1px solid #E2E1E1;
  position: relative;
  background: #FFF;
}

.team-item image {
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.team-info {
  position: absolute;
  top: 20%;
  display: inline-block;
}

.team-info strong {
  font-weight: normal;
  color: #333333;
  font-size: 14px;
}

.team-info .role_name {
  font-size: 14px;
  color: orange;
}

.team-info .time {
  color: #B0B0B0;
  font-size: 12px;
}

.team {
  border-top: 1px solid #EEE;
}

.empty-hint {
  padding: 30px 0;
  padding-top: 50px;
  width: 100%;
  display: inline-block;
  text-align: center;
  color: #666;
}